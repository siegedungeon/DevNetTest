@model IEnumerable<WebApp.Models.Article>
@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Articles";
}

<h3>This is what we have been writing...</h3>

<div class="container">
    <ul class="col-md-8 list-unstyled article-list">
        @foreach (var article in Model)
        {
            <li>
                <partial name="_ArticleSummary" model="article" />
            </li>
        }
    </ul>


    @if (User.IsInRole("writer"))
    {
        <div class="col-md-4">
            <div class="container-fluid sidebar">
                <div class="row">
                    <a asp-action="Create" class="btn btn-primary">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Write a new Article
                    </a>
                </div>
                <div class="row">
                    @await Component.InvokeAsync("LatestArticles", new { howMany = 3 })
                </div>
            </div>
        </div>
    }
</div>